<resources>

    <!-- Base application theme. -->
    <style name="CoreTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccentTranslucent</item>â€¨
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme" parent="CoreTheme" />

    <style name="AppTheme.Login" parent="CoreTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Home" parent="CoreTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Detail" parent="AppTheme" />

    <!-- Fab-->
    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="borderWidth">0dp</item>
    </style>

    <!-- Toolbar-->
    <style name="Toolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- NavigationDrawer Drawer -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Dialog-->
    <style name="AppCompatAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
