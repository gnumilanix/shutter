<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="layoutManager"
            type="android.support.v7.widget.LinearLayoutManager" />

        <variable
            name="adapter"
            type="com.milanix.shutter.user.profile.followers.FollowerListAdapter" />
    </data>

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rvFollowingList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundList"
        app:adapter="@{adapter}"
        app:dividerItemDecoration="@{@drawable/divider_horizontal_dark}"
        app:hasFixedSize="@{true}"
        app:layoutManager="@{layoutManager}" />
</layout>