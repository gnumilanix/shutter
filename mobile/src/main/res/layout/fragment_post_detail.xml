<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="java.util.HashMap" />

        <variable
            name="user"
            type="com.google.firebase.auth.FirebaseUser" />

        <variable
            name="post"
            type="com.milanix.shutter.feed.model.Post" />

        <variable
            name="view"
            type="com.milanix.shutter.feed.detail.PostDetailContract.View" />

        <variable
            name="presenter"
            type="com.milanix.shutter.feed.detail.PostDetailContract.Presenter" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:orientation="vertical">

        <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:imageUrl="@{post.image}" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_gradient_black_99"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvDescription" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="6"
            android:padding="@dimen/margin_normal"
            android:text="@{post.description}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_medium"
            app:layout_constraintBottom_toTopOf="@+id/ivAvatar"
            tools:text="Wondering what is in there, another Earth, another me or just never ending darkness" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/item_feed_avatar"
            android:layout_height="@dimen/item_feed_avatar"
            android:layout_margin="@dimen/margin_normal"
            android:onClick="@{()->view.openProfile(post.authorId)}"
            app:civ_border_color="@color/colorTextGrey400"
            app:civ_border_width="2dp"
            app:imageUrl="@{post.author.avatar}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:placeHolder="@{@drawable/ic_placeholder_small}"
            app:transformation="@{`crop`}"
            tools:background="@color/colorAccentPink" />

        <TextView
            android:id="@+id/tvFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivAvatar"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_normal"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@{String.valueOf(post.favoriters.size())}"
            android:textColor="@color/colorTextGrey300"
            android:textSize="@dimen/text_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="100" />

        <android.support.design.widget.CheckableImageButton
            android:id="@+id/ivFavorites"
            android:layout_width="@dimen/item_text_drawable"
            android:layout_height="@dimen/item_text_drawable"
            android:layout_alignBottom="@+id/tvFavorites"
            android:layout_alignTop="@+id/tvFavorites"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_normal"
            android:background="@drawable/btn_favorite"
            android:onClick="@{()->presenter.markFavorite(post)}"
            app:checked="@{post.favoriters.containsKey(user.getUid())}"
            app:layout_constraintBottom_toBottomOf="@+id/tvFavorites"
            app:layout_constraintEnd_toStartOf="@+id/tvFavorites"
            app:layout_constraintRight_toLeftOf="@+id/tvFavorites"
            app:layout_constraintTop_toTopOf="@+id/tvFavorites" />

        <TextView
            android:id="@+id/tvComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvFavorites"
            android:layout_marginEnd="@dimen/margin_huge"
            android:layout_marginRight="@dimen/margin_huge"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@{String.valueOf(post.commenters.size())}"
            android:textColor="@color/colorTextGrey300"
            android:textSize="@dimen/text_medium"
            app:layout_constraintBottom_toBottomOf="@+id/tvFavorites"
            app:layout_constraintEnd_toStartOf="@+id/ivFavorites"
            app:layout_constraintRight_toLeftOf="@+id/ivFavorites"
            app:layout_constraintTop_toTopOf="@+id/tvFavorites"
            tools:text="100" />

        <ImageView
            android:id="@+id/ivComments"
            android:layout_width="@dimen/item_text_drawable"
            android:layout_height="@dimen/item_text_drawable"
            android:layout_alignBottom="@+id/tvFavorites"
            android:layout_alignTop="@+id/tvFavorites"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_normal"
            android:src="@drawable/ic_icon_comment_normal"
            app:layout_constraintBottom_toBottomOf="@+id/tvFavorites"
            app:layout_constraintEnd_toStartOf="@+id/tvComments"
            app:layout_constraintRight_toLeftOf="@+id/tvComments"
            app:layout_constraintTop_toTopOf="@+id/tvFavorites" />

    </android.support.constraint.ConstraintLayout>
</layout>