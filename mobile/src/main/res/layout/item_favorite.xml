<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="feed"
            type="com.milanix.shutter.feed.model.Feed" />

        <variable
            name="view"
            type="com.milanix.shutter.feed.favorite.FavoriteListContract.View" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_feed_size"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_small"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{()->view.openFeed(feed.id)}"
        app:cardBackgroundColor="@android:color/white"
        tools:ignore="UnusedAttribute">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="@dimen/item_feed_size"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                app:imageUrl="@{feed.thumbnail}"
                app:transformation="@{`crop`}"
                tools:background="@color/colorAccentPink" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:layout_toEndOf="@+id/ivImage"
                android:layout_toRightOf="@+id/ivImage"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:text="@{feed.title}"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                tools:text="Stars through lens" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tvTitle"
                android:layout_alignLeft="@+id/tvTitle"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/tvTitle"
                android:layout_alignStart="@+id/tvTitle"
                android:layout_below="@+id/tvTitle"
                android:layout_marginBottom="@dimen/margin_normal"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="4"
                android:text="@{feed.description}"
                tools:text="Wondering what is in there, another Earth, another me or just never ending darkness" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>