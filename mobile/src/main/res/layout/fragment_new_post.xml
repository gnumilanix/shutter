<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.text.TextUtils" />

        <variable
            name="post"
            type="com.milanix.shutter.post.NewPost" />

        <variable
            name="presenter"
            type="com.milanix.shutter.post.NewPostContract.Presenter" />

        <variable
            name="view"
            type="com.milanix.shutter.post.NewPostContract.View" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <com.milanix.shutter.view.ProportionalFrameLayout
                android:id="@+id/pflPostImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                app:proportion="1">

                <android.support.design.widget.CoordinatorLayout
                    android:id="@+id/clPost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivPost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:imageUrl="@{post.imageUri}"
                        app:placeHolder="@{@drawable/ic_placeholder_large}"
                        app:transformation="@{`crop`}" />
                </android.support.design.widget.CoordinatorLayout>

            </com.milanix.shutter.view.ProportionalFrameLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tlTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pflPostImage"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin_large">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_title"
                    android:inputType="text"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/etDescription"
                    android:nextFocusForward="@+id/etDescription"
                    android:text="@={post.title}" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tlDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tlTitle"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <AutoCompleteTextView
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="@string/hint_description"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:maxLength="250"
                    android:text="@={post.description}" />

            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabSend"
            style="@style/FabStyle"
            android:onClick="@{()->view.selectPostImage()}"
            android:src="@drawable/ic_action_add"
            app:backgroundTint="@color/colorAccent"
            app:layout_anchor="@+id/ivPost"
            app:layout_anchorGravity="bottom|end|right"
            app:rippleColor="@color/colorRipple" />
    </android.support.design.widget.CoordinatorLayout>
</layout>