<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="notification"
            type="com.milanix.shutter.notification.model.Notification" />

        <variable
            name="view"
            type="com.milanix.shutter.notification.NotificationListContract.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_notification_size"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{()->view.openNotification(notification)}"
        tools:ignore="UnusedAttribute">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/item_notification_size"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:imageUrl="@{notification.icon}"
            app:transformation="@{`crop`}"
            tools:background="@color/colorAccentPink" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:layout_toEndOf="@+id/ivImage"
            android:layout_toRightOf="@+id/ivImage"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="1"
            android:text="@{notification.title}"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Stars through lens" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvTitle"
            android:layout_alignLeft="@+id/tvTitle"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/tvTitle"
            android:layout_alignStart="@+id/tvTitle"
            android:layout_below="@+id/tvTitle"
            android:layout_marginBottom="@dimen/margin_normal"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="2"
            android:text="@{notification.message}"
            tools:text="Wondering what is in there, another Earth, another me or just never ending darkness" />
    </RelativeLayout>
</layout>